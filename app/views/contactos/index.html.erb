<p id="notice"><%= notice %></p>

<h1>Contactos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Correo</th>
      <th>Telefono</th>
      <th>Comentario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contactos.each do |contacto| %>
      <tr>
        <td><%= contacto.nombre %></td>
        <td><%= contacto.correo %></td>
        <td><%= contacto.telefono %></td>
        <td><%= contacto.comentario %></td>
        <td><%= link_to 'Ver', contacto %></td>
        <td><%= link_to 'Editar', edit_contacto_path(contacto) %></td>
        <td><%= link_to 'Eliminar', contacto, method: :delete, data: { confirm: 'Estas seguro de eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

